{
  "manifest_version": 2,

  "name": "JWT debugger",
  "description": "The JWT.io debugger as a Chrome extension",
  "version": "1.0.0",

  "browser_action": {
      "default_icon": "img/favicon/favicon-96x96.png",
      "default_popup": "index.html"
  },

  "icons": {
      "96": "img/favicon/favicon-96x96.png",
      "192": "img/favicon/android-icon-192x192.png"
  },

  "commands": {
      "_execute_browser_action": {
          "suggested_key": {
              "default": "Ctrl+Shift+K",
              "mac": "Command+Shift+K",
              "linux": "Ctrl+Shift+K"
          }
      }
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "cookies",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ]
}
