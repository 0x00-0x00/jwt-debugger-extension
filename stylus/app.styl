// navbar-fixed-top

.navbar
  background black
  margin 0
  border-radius 0
  border 0
  +breakpoint("tablet")
    width 100%
    min-height 80px
    border-bottom 1px solid rgba(#4A4A4A,.6)
    position fixed
    top 0
    z-index 100
  +breakpoint("desktop")
    min-height 100px

  .navbar-header
    width 100%
    text-align center
    clearfix()
    position relative

  .brand
    +breakpoint("tablet")
      position absolute
      left 0
      top 20px
    .icon
      +breakpoint("tablet")
        width 40px
        opacity 0
        transform(scale(0))
      +breakpoint("desktop")
        width 60px
    .logo
      +breakpoint("tablet")
        width 80px
        transition(.3s ease-in-out)
        transform(translateX(-40px))
      +breakpoint("desktop")
        width 100px
        transform(translateX(-60px))

  .navbar-nav
    float none
    +breakpoint("tablet")
      display inline-block
    li
      float none
      +breakpoint("tablet")
        display inline-block
        line-height 5.7
      +breakpoint("desktop")
        line-height 7
      a
        background none
        color #9B9B9B
        padding 0 15px
        display inline-block
        &:hover
          color rgba(white,.8)
      &.active
        a
          color white

  .social
    +breakpoint("tablet")
      position absolute
      right 0
      top 28px
    +breakpoint("desktop")
      top 38px

  &.fixed
    .brand
      .icon
        +breakpoint("tablet")
          transition(.3s ease-in)
          opacity 1
          transform(scale(1))
      .logo
        +breakpoint("tablet")
          transform(translateX(10px))
        +breakpoint("desktop")
          transform(translateX(20px))


